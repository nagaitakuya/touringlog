<div class="container">
<div class="row justify-content-center">
<div class="col-md-5">
<h3 class="mt-3 mb-3">パスワード再設定</h3>

<hr>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method :put }) do |f| %>
<div class="form-group">

<%= f.hidden_field :reset_password_token %>
<%=
f.password_field :password,
class: "form-control #{"is-invalid" if resource.errors.messages[:password].present? } touringlog-login-input",
autofocus: "true",
autocomplete: "new-password",
placeholder: "新しいパスワード"
%>
<% if resource.errors.message"[:email].present? %>
<span class="touringlog-error-message">
<strong><%= resource.errors.full_message_for(:email).first %></strong>
</span>
<% end %>
</div>

<div class="form-group">
<%= 
f.password_field :password_confirmation,
class: "form-control touringlog-login-input",
autocomplete: "new-password",
placeholder: "新しいパスワード(確認用)"
%>
</div>

<div class="form-group">
<%= f.submit "パスワードリセット", class: "mt-3 btn touringlog-submit-button w-100" %>
</div>
</div>
</div>
</div>