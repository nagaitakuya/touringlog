<div class="container d-flex justify-content-center mt-3 text-cencter">
  <div class="w-50">
    <h1>マイページ</h1>
    <hr>
    <div class="container">
      <div class="d-flex justify-content-between">
        <div class="row">
          <div class="col-2 d-flex align-items-center">
            <i class="fas fa-user fa-3x"></i>
          </div>
          <div class="col-9 d-flex align-items-center ml-2 mt-3">
            <div class="d-flex flex-column ml-1">
              <label for="user-name">アカウント情報の編集</label>             
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center"> 
          <%= link_to mypage_edit_users_path do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
    <div class="container"> 
      <div class="d-flex justify-content-between">
        <div class="row">
          <div class="col-2 d-flex align-items-center">
            <i class="fas fa-sign-out-alt fa-3x"></i>
          </div>
          <div class="col-9 d-flex align-items-center ml-2 mt-3">
            <div class="d-flex flex-column ml-3">
              <label for="user-name">ログアウト</label>              
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center">
          <%= link_to logout_path, method: :delete do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
  </div>
</div>